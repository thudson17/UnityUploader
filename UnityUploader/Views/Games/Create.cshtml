@model UnityUploader.Models.vmGame

@{
    ViewData["Title"] = "Create";
}

<h2>Add a game</h2>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @Html.TextBoxFor(model => model.name, new { Class = "form-control", Placeholder = "Name" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(model => model.filePath, new { Class = "form-control", Placeholder = "File Path" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.webPath, new { Class = "form-control", Placeholder = "Web Path" })
            </div>
            <div class="form-group">
                <input type="file" class="form-control" name="FileUpload" id="FileUpload" asp-for="FileUpload"  />
            </div>




                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
