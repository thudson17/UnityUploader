@model UnityUploader.Models.VM_Game

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" id="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilePath" class="control-label"></label>
                <input asp-for="FilePath" class="form-control" id="FilePath" data-curpath="@Model.FilePath" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" id="Description" rows="5" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UploadedZipFile" class="control-label"></label>
                <input type="file" name="UploadedZipFile" id="UploadedZipFile" class="form-control" />
                <span asp-validation-for="UploadedZipFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        //append the game name to file path field on change
        $(function () {

            $("#Name").change(function () {
                var filePath = $("#FilePath").data("curpath");
                AppendNameToFilePath(this, filePath);
            });

        });

        function AppendNameToFilePath(ele, filePath) {
            $("#FilePath").val(filePath + $(ele).val());
        }


    </script>

}
